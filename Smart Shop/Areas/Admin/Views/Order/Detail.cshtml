@model ConnectDb.EF.Order

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    //var orderDetail = (List<ConnectDb.EF.OrderDetail>)ViewBag.OrderDetail;

}

@section header{
    Chi tiết đơn hàng

}

<div>
    <h2>Đơn hàng đã đặt: @Html.DisplayFor(model => model.OrderID)</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CreatDate) : @String.Format("{0:MM/dd/yyyy}", Model.CreatDate)
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.UserName) : @Html.DisplayFor(model => model.UserName)
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.ShipName) : @Html.DisplayFor(model => model.ShipName)
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.ShipMobile) : @Html.DisplayFor(model => model.ShipMobile)
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.ShipAddress) : @Html.DisplayFor(model => model.ShipAddress)
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.ShipEmail) :  @Html.DisplayFor(model => model.ShipEmail)
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.Status) : @Html.DisplayFor(model => model.Status)
        </dt>

    </dl>
</div>
