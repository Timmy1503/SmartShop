    var listSpecialProduct = (List<ConnectDb.EF.Product>)ViewBag.ListSpecialProduct;
    var listTopSlide = (List<ConnectDb.EF.Slide>)ViewBag.ListTopSlide;
}
@section slide{
    <div class="skdslider">
        <ul id="demo1">
            @foreach (var item in slide)
            {
                <li>
                    <img src="@item.Image" alt="" />

                    <div class="slide-desc">
                        <h3>@item.Description</h3>
                    </div>
                </li>
            }
        </ul>

        <!-- //main-slider -->
        <!-- //top-header and slider -->
