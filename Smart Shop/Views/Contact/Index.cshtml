@model ConnectDb.EF.Contact
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
<script src="~/Assets/client/js/controller/contactController.js"></script>
}
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Trang chủ</a></li>
            <li class="active">Liên hệ</li>
        </ol>
    </div>
</div>
<div class="about">
    <div class="w3_agileits_contact_grids">
        <div class="col-md-6 w3_agileits_contact_grid_left">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3780.1893287069342!2d105.69181501484273!3d18.655498172009747!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3139cc2c729588dd%3A0x232c18e1c895d4c7!2zNSBQaMaw4bujbmcgSG_DoG5nLCBUcnVuZyDEkMO0LCBUaMOgbmggcGjhu5EgVmluaCwgTmdo4buHIEFuLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1618844302493!5m2!1svi!2s" width="100%" height="750px" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            <div class="agileits_w3layouts_map_pos">
                <div class="agileits_w3layouts_map_pos1">
                    <h3>Thông tin liên hệ</h3>
                    <p>Số 5, Đường Phượng Hoàng, Thành phố Vinh.</p>
                    <ul class="wthree_contact_info_address">
                        <li><i class="fa fa-envelope" aria-hidden="true"></i><a href="mailto:info@example.com">nhom29@gmail.com</a></li>
                        <li><i class="fa fa-phone" aria-hidden="true"></i>+0123 456 789</li>
                    </ul>
                    <div class="w3_agile_social_icons w3_agile_social_icons_contact">
                        <ul>
                            <li><a href="#" class="icon icon-cube agile_facebook"></a></li>
                            <li><a href="#" class="icon icon-cube agile_instagram"></a></li>
                            <li><a href="#" class="icon icon-cube agile_t"></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 w3_agileits_contact_grid_right">
            <h2 class="w3_agile_header">Để lại<span> Thông điệp</span></h2>

            <form method="post">
                <span class="input input--ichiro">
                    <input class="input__field input__field--ichiro" type="text" id="txtName" name="Name" placeholder="" required="" />
                    <label class="input__label input__label--ichiro" for="txtName">
                        <span class="input__label-content input__label-content--ichiro">Nhập tên của bạn</span>
                    </label>
                </span>
                <span class="input input--ichiro">
                    <input class="input__field input__field--ichiro" type="text" id="txtPhone" name="" placeholder="" required="" />
                    <label class="input__label input__label--ichiro" for="txtPhone">
                        <span class="input__label-content input__label-content--ichiro">Nhập SĐT của bạn</span>
                    </label>
                </span>
                <span class="input input--ichiro">
                    <input class="input__field input__field--ichiro" type="email" id="txtEmail" name="Email" placeholder=" " required="" />
                    <label class="input__label input__label--ichiro" for="txtEmail">
                        <span class="input__label-content input__label-content--ichiro">Email</span>
                    </label>
                </span>
                <span class="input input--ichiro">
                    <input class="input__field input__field--ichiro" type="text" id="txtSubject"  placeholder="" required="" />
                    <label class="input__label input__label--ichiro" for="txtSubject">
                        <span class="input__label-content input__label-content--ichiro">Chủ đề</span>
                    </label>
                </span>
                <textarea name="Message" id="txtContent" placeholder="Nhập lời nhắn tại đây..." required=""></textarea>
                <button id="btnSend" class="btn" style="width: 100%;height: 55px;background: #212121; color: #fff; font-size: 1.5em; font-weight: bold;" >Gửi đi</button>
            </form>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>
